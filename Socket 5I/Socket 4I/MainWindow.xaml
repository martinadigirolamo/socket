        <Label Content="Lista messaggi:" HorizontalAlignment="Left" Margin="85,12,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="Indirizzo IP destinatario:" HorizontalAlignment="Left" Margin="289,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Messaggio da inviare:" HorizontalAlignment="Left" Margin="336,83,0,0" VerticalAlignment="Top" Width="144" FontSize="14"/>

    </Grid>
</Window>
